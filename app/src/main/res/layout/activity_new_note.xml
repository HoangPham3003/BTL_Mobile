<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9DCCD"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cancel_button1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="20dp"
                android:clickable="true"
                android:onClick="close_act"
                android:src="@drawable/back_icon"
                tools:ignore="OnClick" />

            <ImageView
                android:layout_width="230dp"
                android:layout_height="20dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:onClick="set_reminder"
                android:src="@drawable/reminder_icon"
                tools:ignore="OnClick" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:onClick="delete_note"
                android:src="@drawable/delete_icon"
                tools:ignore="OnClick" />

            <ImageView
                android:id="@+id/add_update_button1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:onClick="save_button_add_update"
                android:src="@drawable/complete_icon"
                tools:ignore="OnClick" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="550dp"

            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:paddingRight="20dp"
            android:paddingBottom="50dp">


            <EditText
                android:id="@+id/title_value"
                style="@style/Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ems="10"
                android:hint="Tiêu đề"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:paddingLeft="0dp"
                android:paddingTop="8dp"
                android:paddingBottom="0dp"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:textColorHint="#8AA0D8"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/desc_value"
                style="@style/Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:ems="10"
                android:gravity="start"
                android:hint="Nội dung..."
                android:inputType="textMultiLine|textAutoCorrect"
                android:maxLines="15"
                android:paddingLeft="0dp"
                android:paddingTop="8dp"
                android:paddingRight="0dp"
                android:paddingBottom="8dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:textColorHint="#8AA0D8"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rem_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#FFD500"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="3dp"
                    android:text="ignore"
                    android:textColor="#000000"
                    android:textColorHighlight="#EAD40D"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rem_date1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#FFFF00"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="3dp"
                    android:text="ignore"
                    android:textColor="#000000"
                    android:textColorHighlight="#EAD40D"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>